
<h1>Foos</h1>

<%= button_to 'создать Foo', new_foo_path, method: :get %>
<table>
  <thead>
  <tr>
    <th>ИМЯ</th>
    <th>Описание</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @foos.each do |foo| %>
    <tr>
      <td><%= foo.name %></td>
      <td><%= foo.description %></td>
      <td><%= link_to 'смотреть', foo %></td>
      <td><%= link_to 'редактировать', edit_foo_path(foo) %></td>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

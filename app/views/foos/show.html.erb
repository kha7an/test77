<h1><%= @foo.name %></h1>
<p><%= @foo.description %></p>

<%= link_to 'редактировать', edit_foo_path(@foo) %> |
<%= link_to 'вернуться назад', foos_path %>
<%= button_to 'удалить', @foo, method: :delete, data: { confirm: 'Вы уверены?' } %>

<h2>Bars</h2>
<%= button_to 'создать Bar', new_foo_bar_path(@foo), method: :get %>
<table>
  <thead>
  <tr>
    <th>Имя</th>
    <th>описание</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @foo.bars.each do |bar| %>
    <tr>
      <td><%= bar.name %></td>
      <td><%= bar.description %></td>
      <td><%= link_to 'смотреть', foo_bar_path(@foo, bar) %></td>
      <td><%= link_to 'редактировать', edit_foo_bar_path(@foo, bar) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
